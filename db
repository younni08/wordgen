
// users

create table users (
    id serial primary key,
    user_pk varchar(100),
    user_email varchar(500),
    user_pw varchar(500),
    register_date timestamp,
    last_login timestamp,
    session varchar(50) default '', 
    policy1 boolean default false,
    policy2 boolean default false,
    policy3 boolean default false,
    privacy boolean default false,
    user_valified boolean default false,
    salt varchar(100),
    user_ip inet
)