
// users

create table users (
    id serial primary key,
    user_pk varchar(100),
    user_email varchar(500),
    user_pw varchar(500),
    register_date timestamp,
    last_login timestamp,
    session varchar(50) default '', 
    policy1 boolean default false,
    policy2 boolean default false,
    policy3 boolean default false,
    privacy boolean default false,
    user_valified boolean default false,
    salt varchar(100),
    user_ip inet
)

// questionbank 
create table questionbank(
  id serial primary key,
  user_pk varchar(100),
  question_pk varchar(100),
  question_pass int,
  question_type varchar(50),
  question_series varchar(100),
  question_series_cnt int,
  question_qr_access int default 0,
  question_advance_setting boolean default false,
  question_title varchar(1000),
  question_image_cnt int,
  question_image_key varchar(1000),
  question_image_type varchar(100),
  question_image_position varchar(100) default 'top',
  question_user_encouter int,
  question_choice int,
  question_choice1_txt varchar(1000),
  question_choice2_txt varchar(1000),
  question_choice3_txt varchar(1000),
  question_choice4_txt varchar(1000),
  question_choice5_txt varchar(1000),
  question_chart_type varchar(50),
  question_longText varchar(5000),
  question_date timestamp,
  question_valid boolean default true,
  question_state varchar(100),
  question_ip inet
)

// etc/nginx/nginx.conf
server {
    listen 443 ssl;
    ssl_certificate /etc/letsencrypt/live/wordgen.kr/fullchain.pem;
    ssl_certificate_key /etc/letsencrypt/live/wordgen.kr/privkey.pem;
    ssl_session_timeout 5m;
}

// etc/nginx/sites-available/default
server {
        listen 443 ssl;
        ssl_certificate /etc/letsencrypt/live/wordgen.kr/fullchain.pem;
        ssl_certificate_key /etc/letsencrypt/live/wordgen.kr/privkey.pem;
        ssl_session_timeout 5m;
        ssl_protocols TLSv1 TLSv1.1 TLSv1.2 TLSv1.3;
        ssl_prefer_server_ciphers on;

        root /var/www/html;

        index index.html index.htm index.nginx-debian.html;

        server_name wordgen.kr;

        location / {
            proxy_set_header HOST $host;
            proxy_buffering off;
            #proxy_pass_header Server;
            proxy_set_header X-Real-IP $remote_addr;
            proxy_set_header X-Forwarded_for $proxy_add_x_forwarded_for;
            proxy_set_header X-Forwarded_Proto $scheme;
            proxy_redirect off;
            proxy_pass http://127.0.0.1:6000;
        }
}
server {
    if ($host = wordgen.com) {
            return 301 https://$host$request_uri;
    }
    server_name wordgen.com;
    listen 80;
    return 301 https://$host$request_uri;
    #return 404;
}

